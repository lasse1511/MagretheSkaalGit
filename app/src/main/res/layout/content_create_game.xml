<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_create_game"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.lasse.magretheskaal.CreateGame"
    tools:showIn="@layout/activity_create_game"
    android:background="@color/colorPrimary">

    <Button
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/BTN_Info1"
        android:background="@android:drawable/ic_menu_info_details"
        android:minHeight="61dp"
        android:enabled="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="12dp" />

    <Button
        android:text="Create "
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/BTN_create"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:enabled="true"
        android:layout_marginBottom="39dp"
        android:textColor="@android:color/background_dark"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:backgroundTint="@android:color/background_light" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bowl of fortune"
        android:id="@+id/textView"
        android:textAppearance="@style/TextAppearance.AppCompat.Display3"
        android:textColor="@android:color/background_light"
        android:textSize="46sp"
        android:textAllCaps="false"
        android:layout_marginTop="8dp"
        android:fontFamily="cursive"
        android:typeface="normal"
        android:textAlignment="center"
        android:layout_below="@+id/BTN_Info1"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Join"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/BTN_join"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:enabled="true"
        android:layout_marginBottom="14dp"
        android:textColor="@android:color/background_dark"
        style="@style/Widget.AppCompat.Button"
        android:layout_above="@+id/BTN_create"
        android:layout_alignParentStart="true"
        android:backgroundTint="@android:color/background_light" />

</RelativeLayout>
